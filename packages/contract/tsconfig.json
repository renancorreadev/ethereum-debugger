{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", ".deployed/**/*.json", "hardhat"],
  "exclude": ["node_modules"]
}
